doctype html
html
 head
   title eCommerce
      meta(charset='utf-8')
      link(rel='stylesheet' href='css/style.css')
  body
    h1 eCommerce
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') FAQ

    form(method='post', action='/items')
      input(name='name', type='test', placeholder='iPad', autofocus=true)
      input(name='length', type='number', placeholder='length')
      input(name='width', type='number', placeholder='width')
      input(name='height', type='number', placeholder='height')
      input(name='weight', type='number', placeholder='weight')
      input(name='color', type='color', placeholder='color')
      input(name='quantity', type='number', placeholder='quantity')
      input(name='msrp', type='number', placeholder='msrp')
      input(name='percentOff', type='number', placeholder='percentOff')
      button Add to Database
